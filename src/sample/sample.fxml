<GridPane alignment="center" hgap="10" style="-fx-background-color: #BE81F7;" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #BE81F7;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
