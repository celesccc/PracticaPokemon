                  <Label alignment="TOP_LEFT" text="Jolteon" textFill="WHITE">
                     <font>
                        <Font name="Malgun Gothic Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="TOP_RIGHT" text="Nv 65" textAlignment="RIGHT" textFill="WHITE">
                     <font>
                        <Font name="Malgun Gothic Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ImageView pickOnBounds="true" preserveRatio="true">
