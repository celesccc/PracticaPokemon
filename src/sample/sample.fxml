            <Image requestedHeight="100" requestedWidth="100" url="@../img/vaporeon.png" />
         </image></ImageView>
      <ImageView pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
