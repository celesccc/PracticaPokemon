            <Image requestedHeight="100" requestedWidth="100" url="@../img/charizard.png" />
         </image></ImageView>
      <ImageView pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
