                  <Image requestedHeight="100" requestedWidth="100" url="@../img/jolteon.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label style="-fx-background-color: #6E6E6E;" text="PS" textFill="#f26a09">
