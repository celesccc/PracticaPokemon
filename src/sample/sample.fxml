            <Image requestedHeight="100" requestedWidth="100" url="@../img/blastoise.png" />
         </image></ImageView>
      <ImageView pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <image>
            <Image requestedHeight="100" requestedWidth="100" url="@../img/mewtwo.png" />
         </image></ImageView>
      <ImageView pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <image>
            <Image requestedHeight="100" requestedWidth="100" url="@../img/butterfree.png" />
         </image></ImageView>
   </children>

    <columnConstraints>
        <ColumnConstraints minWidth="100.0" prefWidth="200.0" />
        <ColumnConstraints minWidth="100.0" prefWidth="200.0" />
        <ColumnConstraints minWidth="100.0" prefWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="100.0" prefHeight="200.0" />
        <RowConstraints minHeight="100.0" prefHeight="200.0" />
